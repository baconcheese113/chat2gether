type User {
  id: ID! @unique @id
  ip: String!
  fingerprint: String!
  gender: GenderType!
  lookingFor: [GenderObject!]!
  age: Int!
  minAge: Int!
  maxAge: Int!
  audioPref: AudioPrefType!
  accAudioPrefs: [AudioPrefObject!]!
  lastActive: DateTime!
  isHost: Boolean!
  isConnected: Boolean!
  visited: [User!]! @relation(name: "VisitedUsers", onDelete: SET_NULL)
  matches: [Match!]! @relation(name: "MatchedUsers")
  reportsMade: [Report!]! @relation(name: "ReportsMade")
  reportsReceived: [Report!]! @relation(name: "ReportsReceived")
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Feedback {
  id: ID! @unique @id
  text: String!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Report {
  id: ID! @unique @id
  type: ReportType!
  reporter: User! @relation(name: "ReportsMade")
  offender: User! @relation(name: "ReportsReceived")
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Ban {
  id: ID! @unique @id
  user: User!
  reason: ReportType!
  startAt: DateTime!
  endAt: DateTime!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

enum ReportType {
  UNDERAGE
  ABUSIVE
  NO_VIDEO
  FALSE_AGE
  FALSE_SEX
  FALSE_AUDIO
}

type Match {
  id: ID! @unique @id
  users: [User!]! @relation(name: "MatchedUsers")
  disconnectType: DisconnectType
  hostId: ID!
  clientId: ID!
  creatorId: ID!
  disconnectorId: ID
  hasEnded: Boolean! @default(value: false)
  endedAt: DateTime
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

enum DisconnectType {
  REFRESH
  STOP
  NEXT_MATCH
  REPORT
}

type GenderObject {
  id: ID! @unique @id
  name: GenderType! @unique
}

enum GenderType {
  MALE
  FEMALE
  M2F
  F2M
}

type AudioPrefObject {
  id: ID! @unique @id
  name: AudioPrefType! @unique
}

enum AudioPrefType {
  NO_AUDIO
  MOANS
  CONVERSATION
  CHAT_FIRST
}